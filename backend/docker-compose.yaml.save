services:
  db:
    image: postgres:15
    container_name: automation_db    restart: always
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: automation_db
    ports:
      - "5432:5432"

  backend:
    build: .
    container_name: automation_backend
    restart: always
    ports:
      - "5000:5000"
    depends_on:
      - db
    environment:
      DATABASE_URL: postgresql://admin:admin@db:5432/automation_db
